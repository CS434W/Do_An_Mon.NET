<Window x:Class="QLSanBong.dangki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSanBong"
        mc:Ignorable="d"
        Title="dangki" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ SÂN BÓNG"
            FontSize="24" FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0 0 0 20"/>

        <!-- Form đăng ký -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
            <TextBlock Text="Đăng ký tài khoản" FontSize="18" FontWeight="Bold" 
                HorizontalAlignment="Center" Margin="0 0 0 15"/>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Họ tên:" Width="120"/>
                <TextBox x:Name="txtFullName" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Email:" Width="120"/>
                <TextBox x:Name="txtEmail" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="SĐT:" Width="120"/>
                <TextBox x:Name="txtPhone" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Tên đăng nhập:" Width="120"/>
                <TextBox x:Name="txtUsername" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Mật khẩu:" Width="120"/>
                <PasswordBox x:Name="txtPassword" Width="200"/>
            </StackPanel>

            <Button Content="Đăng ký" Width="100" Margin="0 15 0 0"
             HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
