<Window x:Class="QLSanBong.View.QuanLiNguoiDung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quản lý người dùng" Height="450" Width="800">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Form nhập thông tin -->
        <StackPanel Grid.Column="0" Margin="0 0 20 0">
            <TextBlock Text="Thông tin người dùng" FontSize="18" FontWeight="Bold" Margin="0 0 0 15" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Họ tên:" Width="100"/>
                <TextBox Text="{Binding txtTenNV, UpdateSourceTrigger=PropertyChanged}" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="SĐT:" Width="100"/>
                <TextBox Text="{Binding txtSDT, UpdateSourceTrigger=PropertyChanged}" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Tên đăng nhập:" Width="100"/>
                <TextBox Text="{Binding txtTenDangNhap, UpdateSourceTrigger=PropertyChanged}" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Mật khẩu:" Width="100"/>
                <PasswordBox x:Name="pwdBox" PasswordChanged="pwdBox_PasswordChanged" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="15 15 0 0" HorizontalAlignment="Center">
                <Button Content="Thêm" Width="60" Margin="5 0" Command="{Binding ThemCommand}"/>
                <Button Content="Sửa" Width="60" Margin="5 0" Command="{Binding SuaCommand}"/>
                <Button Content="Xóa" Width="60" Margin="5 0" Command="{Binding XoaCommand}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="15 10 0 0" HorizontalAlignment="Center">
                <Button Content="Quay về" Width="80" Margin="5 0" Click="btnQuayVe_Click" Background="LightGray"/>
                <Button Content="Đăng xuất" Width="80" Margin="5 0" Click="btnDangXuat_Click" Background="#DC3545" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Danh sách người dùng -->
        <DataGrid Grid.Column="1" ItemsSource="{Binding TaiKhoans}" SelectedItem="{Binding SelectedTaiKhoan}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding NhanVienTen}" Width="*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding NhanVienSDT}" Width="*"/>
                <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding TenDangNhap}" Width="*"/>
                <DataGridTextColumn Header="Vai trò" Binding="{Binding VaiTro}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
