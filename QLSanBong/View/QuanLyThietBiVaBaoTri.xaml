<Window x:Class="QLSanBong.View.QuanLyThietBiVaBaoTri"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSanBong.View"
        mc:Ignorable="d"
        Title="QuanLyThietBiVaBaoTri" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#0078D7" Orientation="Horizontal" Height="60">
            <TextBlock Text="QUẢN LÝ THIẾT BỊ VÀ BẢO TRÌ SÂN BÓNG"
           Foreground="White" 
           FontSize="18" 
           FontWeight="Bold" 
           VerticalAlignment="Center" 
           Margin="20,0"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Tab Quản lý thiết bị -->
            <TabItem Header="Quản lý thiết bị">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Name="btn_them" Content="Thêm thiết bị" Margin="0,0,10,0" Padding="10,5" Click="Button_Them"/>
                        <Button Name="btn_sua" Content="Sửa thiết bị" Margin="0,0,10,0" Padding="10,5" Click="Button_Sua"/>
                        <Button Name="btn_xoa" Content="Xóa thiết bị" Margin="0,0,10,0" Padding="10,5" Click="Button_Xoa"/>
                    </StackPanel>

                    <!-- Danh sách thiết bị -->
                    <DataGrid Name="DG_TB" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">

                    </DataGrid>

                    <!-- Form chi tiết thiết bị -->
                    <GroupBox Grid.Row="2" Header="Chi tiết thiết bị" Margin="0,10,0,0">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Content="Mã thiết bị:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                            <TextBox x:Name="txtMaThietBi" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>

                            <Label Content="Tên thiết bị:" Grid.Row="0" Grid.Column="2" Margin="5"/>
                            <TextBox x:Name="txtTenThietBi" Grid.Row="0" Grid.Column="3" Margin="5"/>

                            <Label Content="Số lượng:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                            <TextBox x:Name="txtSoLuong" Grid.Row="1" Grid.Column="1" Margin="5"/>

                            <Label Content="Loại:" Grid.Row="1" Grid.Column="2" Margin="5"/>
                            <TextBox x:Name="txtLoai" Grid.Row="1" Grid.Column="3" Margin="5"/>

                            <Label Content="Ngày nhập:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                            <DatePicker x:Name="dpNgayNhap" Grid.Row="2" Grid.Column="1" Margin="5"/>

                            <Label Content="Tình trạng:" Grid.Row="2" Grid.Column="2" Margin="5"/>
                            <ComboBox Name="cbTinhTrang" Grid.Row="2" Grid.Column="3" Margin="5">
                                <ComboBoxItem>Tốt</ComboBoxItem>
                                <ComboBoxItem>Hỏng</ComboBoxItem>
                            </ComboBox>

                            <Label Content="Mã sân:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                            <TextBox x:Name="txtMaSan" Grid.Row="3" Grid.Column="1" Margin="5"/>


                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Tab Quản lý bảo trì -->
            <TabItem Header="Quản lý bảo trì">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar bảo trì -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Name="btn_thembt" Content="Thêm bảo trì" Margin="0,0,10,0" Padding="10,5" Click="Button_ThemBT"/>
                        <Button Name="btn_suabt" Content="Sửa bảo trì" Margin="0,0,10,0" Padding="10,5" Click="Button_SuaBT"/>
                        <Button Name="btn_xoabt" Content="Xóa bảo trì" Margin="0,0,10,0" Padding="10,5" Click="Button_XoaBT"/>
                    </StackPanel>

                    <!-- Danh sách bảo trì -->
                    <DataGrid Name="DG_BT" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">

                    </DataGrid>

                    <!-- Form chi tiết bảo trì -->
                    <GroupBox Grid.Row="2" Header="Chi tiết bảo trì" Margin="0,10,0,0">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Content="Mã bảo trì:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                            <TextBox x:Name="txtMaBaoTri" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>

                            <Label Content="Mã thiết bị:" Grid.Row="0" Grid.Column="2" Margin="5"/>
                            <ComboBox x:Name="cbMaThietBi" Grid.Row="0" Grid.Column="3" Margin="5"/>

                            <Label Content="Ngày bắt đầu:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                            <DatePicker x:Name="dpNgayBatDau" Grid.Row="1" Grid.Column="1" Margin="5"/>

                            <Label Content="Ngày kết thúc:" Grid.Row="1" Grid.Column="2" Margin="5"/>
                            <DatePicker x:Name="dpNgayKetThuc" Grid.Row="1" Grid.Column="3" Margin="5"/>

                            <Label Content="Loại bảo trì:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                            <TextBox x:Name="txtLoaiBaoTri" Grid.Row="2" Grid.Column="1" Margin="5"/>

                            <Label Content="Chi phí:" Grid.Row="2" Grid.Column="2" Margin="5"/>
                            <TextBox x:Name="txtChiPhi" Grid.Row="2" Grid.Column="3" Margin="5"/>

                            <Label Content="Trạng thái:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                            <ComboBox Name="cbTrangThai" Grid.Row="3" Grid.Column="1" Margin="5">
                                <ComboBoxItem>Đang bảo trì</ComboBoxItem>
                                <ComboBoxItem>Đã hoàn thành bảo trì</ComboBoxItem>
                            </ComboBox>

                            <Label Content="Nhân viên BT:" Grid.Row="3" Grid.Column="2" Margin="5"/>
                            <TextBox x:Name="txtNhanVienBT" Grid.Row="3" Grid.Column="3" Margin="5"/>

                            <StackPanel Grid.Row="4" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                                <Button x:Name="btnLuuBaoTri" Content="Lưu" Width="80" Margin="5"/>
                                <Button x:Name="btnHuyBaoTri" Content="Hủy" Width="80" Margin="5"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="© 2025 Hệ thống quản lý sân bóng - Quản lý thiết bị và bảo trì"/>
            </StatusBarItem>

        </StatusBar>
    </Grid>
</Window>
