<Window x:Class="QLSanBong.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSanBong"
        mc:Ignorable="d"
        xmlns:conv="clr-namespace:QLSanBong.Converters"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <!-- Layout chính -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Nội dung chính -->
            <RowDefinition Height="Auto"/>
            <!-- Nút đăng nhập/đăng ký -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D7" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚽" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="HỆ THỐNG QUẢN LÝ SÂN BÓNG" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Nội dung chính -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Chào mừng -->
                <TextBlock Text="Chào mừng đến hệ thống" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                <!-- Các chức năng chính -->
                <WrapPanel HorizontalAlignment="Center">
                    <!-- Lịch đặt sân -->
                    <Button x:Name="btnLichDatSan" 
                        Content="📅 Lịch đặt sân" 
                        Width="180" Height="80" 
                        Margin="10" 
                        FontSize="14"
                        Click="FeatureButton_Click"/>

                    <!-- Quản lý sân -->
                    <Button x:Name="btnSanBong" 
                        Content="⚽ Quản lý sân" 
                        Width="180" Height="80" 
                        Margin="10" 
                        FontSize="14"
                        Click="FeatureButton_Click"/>

                    <!-- Khách hàng -->
                    <Button x:Name="btnKhachHang" 
                        Content="👥 Khách hàng" 
                        Width="180" Height="80" 
                        Margin="10" 
                        FontSize="14"
                        Click="FeatureButton_Click"/>

                    <!-- Thanh toán -->
                    <Button x:Name="btnThanhToan" 
                        Content="💳 Thanh toán" 
                        Width="180" Height="80" 
                        Margin="10" 
                        FontSize="14"
                        Click="FeatureButton_Click"/>

                    <!-- Người dùng -->
                    <Button x:Name="btnNguoiDung" 
                        Content="👤 Người dùng" 
                        Width="180" Height="80" 
                        Margin="10" 
                        FontSize="14"
                        Click="FeatureButton_Click"/>

                    <!-- Thiết bị -->
                    <Button x:Name="btnThietBi" 
                        Content="🔧 Thiết bị" 
                        Width="180" Height="80" 
                        Margin="10" 
                        FontSize="14"
                        Click="FeatureButton_Click"/>
                </WrapPanel>

                <!-- Thông tin nhanh -->
                <Border Background="#F0F0F0" Margin="0,20,0,0" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Thông tin nhanh" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Hôm nay: " FontWeight="Bold"/>
                            <TextBlock x:Name="txtToday" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Tổng khách: " FontWeight="Bold"/>
                            <TextBlock x:Name="txtTotalCustomers" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Doanh thu: " FontWeight="Bold"/>
                            <TextBlock x:Name="txtRevenue" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Sân trống: " FontWeight="Bold"/>
                            <TextBlock x:Name="txtEmptyFields" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Chờ thanh toán: " FontWeight="Bold"/>
                            <TextBlock x:Name="txtPendingPayments" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Nút đăng nhập/đăng xuất -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,10,0,10">
            <!-- Nút đăng nhập (hiển thị khi chưa đăng nhập) -->
            <Button x:Name="btnDangNhap" 
        Content="Đăng nhập" 
        Click="btnDangNhap_Click"
        Width="120" Height="40" Foreground="Black"
        BorderThickness="0" 
        Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Nút đăng xuất (hiển thị khi đã đăng nhập) -->
            <Button x:Name="btnDangXuat" 
        Content="Đăng xuất" 
        Click="btnDangXuat_Click"
        Width="120" Height="40" Foreground="White"
        Background="#DC3545"
        BorderThickness="0" 
        Cursor="Hand"
        Margin="10,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Thông tin người dùng (hiển thị khi đã đăng nhập) -->
            <StackPanel x:Name="userInfoPanel" Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock x:Name="txtUserInfo" Text="" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#E0E0E0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Đồ án môn học .NET - Nhóm 4" FontStyle="Italic"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
