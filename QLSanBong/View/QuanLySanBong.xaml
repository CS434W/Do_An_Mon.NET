<Window x:Class="QLSanBong.View.QuanLySanBong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSanBong.View"
        mc:Ignorable="d"
        Title="QuanLySanBong" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <GroupBox Header="Thôn tin chi tiết sân bóng" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"  />
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Mã Sân:" Grid.Row="0" Grid.Column="0" Margin="10"/>
                <Label Content="Tên Sân:"  Grid.Row="1" Grid.Column="0" Margin="10"/>
                <Label Content="Loại Sân"  Grid.Row="2" Grid.Column="0" Margin="10"/>
                <Label Content="Đơn giá:"  Grid.Row="3" Grid.Column="0" Margin="10"/>
                <Label Content="Trạng thái:"  Grid.Row="4" Grid.Column="0" Margin="10"/>

                <TextBox x:Name="txt_MaSan"  Grid.Row="0" Grid.Column="1" Margin="10"/>
                <TextBox x:Name="txt_TenSan" Grid.Row="1" Grid.Column="1" Margin="10"/>
                <!--<TextBox x:Name="txt_LoaiSan" Grid.Row="2" Grid.Column="1" Margin="10"/>-->
                <ComboBox x:Name="cb_LoaiSan" Grid.Row="2" Grid.Column="1" Margin="10" SelectedIndex="0">
                    <ComboBoxItem>Sân 5</ComboBoxItem>
                    <ComboBoxItem>Sân 7</ComboBoxItem>
                    <ComboBoxItem>Sân 11</ComboBoxItem>
                </ComboBox>
                <TextBox x:Name="txt_DonGia" Grid.Row="3" Grid.Column="1" Margin="10"/>
                <ComboBox x:Name="cb_trangThai" Grid.Row="4" Grid.Column="1" Margin="10" SelectedIndex="0">
                    <ComboBoxItem>Hoạt động</ComboBoxItem>
                    <ComboBoxItem>Không hoạt động</ComboBoxItem>
                    <!--<ComboBoxItem>Còn trống</ComboBoxItem>
                    <ComboBoxItem>Đang đặt</ComboBoxItem>-->
                    <!--<ComboBoxItem>Đang sử dụng</ComboBoxItem>
                    <ComboBoxItem>Bảo trì</ComboBoxItem>
                    <ComboBoxItem>Ngưng hoạt động</ComboBoxItem>-->
                </ComboBox>

                <!--<ComboBox x:Name="cb_trangThai" Grid.Row="4" Grid.Column="1" Margin="10"/>-->
                <!--<DatePicker x:Name="dp_ngaySinh" Grid.Row="5" Grid.Column="1" Margin="10"/>-->
                <WrapPanel Grid.Row="5" Grid.ColumnSpan="2">
                    <Button x:Name="btn_Them" Content="Thêm" Width="100" Margin="10" Click="btn_Them_Click" />
                    <Button x:Name="btn_Sua" Content="Sửa" Width="100" Margin="10" Click="btn_Sua_Click"/>
                    <Button x:Name="btn_Xoa" Content="Xóa" Width="100" Margin="10" Click="btn_Xoa_Click"/>
                    <Button x:Name="btn_TKiem" Content="Tìm kiếm" Width="100" Margin="10"/>
                    <Button x:Name="btn_QuayVe" Content="Quay về" Width="100" Margin="10" Click="btn_QuayVe_Click" Background="LightGray"/>
                    <Button x:Name="btn_DangXuat" Content="Đăng xuất" Width="100" Margin="10" Click="btn_DangXuat_Click" Background="#DC3545" Foreground="White"/>
                </WrapPanel>

                <DataGrid x:Name="dataGrid_QLSB" Grid.Row="6" Grid.ColumnSpan="2" Margin="10" AutoGenerateColumns="False" SelectionChanged="dataGrid_QLSB_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Sân" Binding="{Binding MaSan}" Width="*"/>
                        <DataGridTextColumn Header="Tên Sân" Binding="{Binding TenSan}" Width="*"/>
                        <DataGridTextColumn Header="Loại Sân" Binding="{Binding LoaiSan}" Width="*"/>
                        <DataGridTextColumn Header="Đơn Giá" Binding="{Binding DonGia}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>


            </Grid>
        </GroupBox>

    </Grid>
</Window>
