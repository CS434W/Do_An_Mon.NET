<Window x:Class="QL.dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QL"
        mc:Ignorable="d"
        Title="Đăng nhập / Đăng ký" Height="500" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề lớn -->
        <TextBlock Text="QUẢN LÝ SÂN BÓNG"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- Tab cho Đăng nhập / Đăng ký -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Tab Đăng nhập -->
            <TabItem Header="Đăng nhập">
                <StackPanel Margin="20">
                    <TextBlock Text="Đăng nhập tài khoản" FontSize="18" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0 0 0 15"/>

                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Tên đăng nhập:" Width="120"/>
                        <TextBox x:Name="txtLoginUsername" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Mật khẩu:" Width="120"/>
                        <PasswordBox x:Name="txtLoginPassword" Width="200"/>
                    </StackPanel>

                    <Button Content="Đăng nhập" Width="100" Margin="0 15 0 0"
                            HorizontalAlignment="Center"/>

                    <!-- Quên mật khẩu -->
                    <TextBlock Text="Quên mật khẩu?" Foreground="Blue" TextDecorations="Underline"
                               HorizontalAlignment="Center" Cursor="Hand" Margin="0 10 0 0"/>
                </StackPanel>
            </TabItem>

            <!-- Tab Đăng ký -->
            <TabItem Header="Đăng ký">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Tạo tài khoản mới" FontSize="18" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0 0 0 15"/>

                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <TextBlock Text="Họ và tên:" Width="120"/>
                            <TextBox x:Name="txtFullName" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <TextBlock Text="Tên đăng nhập:" Width="120"/>
                            <TextBox x:Name="txtRegisterUsername" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <TextBlock Text="Mật khẩu:" Width="120"/>
                            <PasswordBox x:Name="txtRegisterPassword" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <TextBlock Text="Xác nhận mật khẩu:" Width="120"/>
                            <PasswordBox x:Name="txtConfirmPassword" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <TextBlock Text="Email:" Width="120"/>
                            <TextBox x:Name="txtEmail" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <TextBlock Text="Số điện thoại:" Width="120"/>
                            <TextBox x:Name="txtPhone" Width="200"/>
                        </StackPanel>

                        <Button Content="Đăng ký" Width="100" Margin="0 15 0 0"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
