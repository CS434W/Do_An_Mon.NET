<Window x:Class="QLSanBong.QuanLiNguoiDung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSanBong"
        mc:Ignorable="d"
        Title="QuanLiNguoiDung" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Form nhập thông tin người dùng -->
        <StackPanel Grid.Column="0" Margin="0 0 20 0">
            <TextBlock Text="Thông tin người dùng" FontSize="18" FontWeight="Bold" Margin="0 0 0 15" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Họ tên:" Width="100"/>
                <TextBox x:Name="txtFullName" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Email:" Width="100"/>
                <TextBox x:Name="txtEmail" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="SĐT:" Width="100"/>
                <TextBox x:Name="txtPhone" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Tên đăng nhập:" Width="100"/>
                <TextBox x:Name="txtUsername" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Mật khẩu:" Width="100"/>
                <PasswordBox x:Name="txtPassword" Width="180"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="15 15 0 0" HorizontalAlignment="Center">
                <Button Content="Thêm" Width="60" Margin="5 0"/>
                <Button Content="Sửa" Width="60" Margin="5 0"/>
                <Button Content="Xóa" Width="60" Margin="5 0"/>
                <Button Content="Khóa/Mở" Width="80" Margin="5 0"/>
            </StackPanel>
        </StackPanel>

        <!-- Danh sách người dùng set cứng -->
        <DataGrid Grid.Column="1" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding}" Width="*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding}" Width="*"/>
                <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
